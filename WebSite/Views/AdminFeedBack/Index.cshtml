@model IEnumerable<WebSite.Models.FeedBack>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayOut.cshtml";
}

<div class="content-wrapper">
    <div class="container-fluid">
        <!-- Example DataTables Card-->
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-table"></i> Feed Back
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <p>
                        @Html.ActionLink("Create New", "Create")
                    </p>
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Title)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Content)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Customer.FullName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Customer.CusName)
                                </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Content)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Customer.FullName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Customer.CusName)
                                    </td>
                                    <td>
                                        @*@Html.ActionLink("Edit", "Edit", new { id = item.FBackID }) |*@
                                        @Html.ActionLink("Reply", "Details", new { id = item.FBackID }) 
                                        @*@Html.ActionLink("Delete", "Delete", new { id = item.FBackID })*@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
