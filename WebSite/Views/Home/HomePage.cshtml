@using PagedList.Mvc;
@using PagedList;
@using WebSite.Models;
@model PagedList.PagedList<Product>
@{
    ViewBag.Title = "HomePage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="fwslider">
    <div class="slider_container">
        <div class="slide">
            <!-- Slide image -->
            <img src="~/Content/App/images/banner1.png" alt="" />
            <!-- /Slide image -->
            <!-- Texts container -->
            <div class="slide_content">
                <div class="slide_content_wrap">
                    @*<!-- Text title -->
                        <h4 class="title">Aluminium Club</h4>
                        <!-- /Text title -->
                        <!-- Text description -->
                        <p class="description">Experiance ray ban</p>
                        <!-- /Text description -->*@
                </div>
            </div>
            <!-- /Texts container -->
        </div>
        <!-- /Duplicate to create more slides -->
        <div class="slide">
            <img src="~/Content/App/images/banner4.jpg" alt="" />
            <div class="slide_content">
                <div class="slide_content_wrap">
                    @*<h4 class="title">consectetuer adipiscing </h4>
                        <p class="description">diam nonummy nibh euismod</p>*@
                </div>
            </div>
        </div>
        <!--/slide -->
    </div>
    <div class="timers"></div>
    <div class="slidePrev"><span></span></div>
    <div class="slideNext"><span></span></div>
</div>
<div class="main">
    <div class="wrap">
        <div class="section group">
            <div class="cont span_2_of_3">
                <h2 class="head">Featured Products</h2>
                    <div class="top-box">
                        @foreach (var product in ViewBag.featuredProducts)
                        {
                            <div class="section group">
                                <div class="col_1_of_3 span_1_of_3">
                                    <a href="@Url.Action("Details","Product", new { id = product.ProID })">
                                        <div class="inner_content clearfix">
                                            <div class="product_image">
                                                <img src="@Url.Content("~/Content/App/")images/@product.Image" alt="" width="300" height="180" />
                                            </div>
                                            <div class="sale-box1"><span class="on_sale title_shop">Sale</span></div>
                                            <div class="price">
                                                <div class="cart-left">
                                                    <p class="title">@product.ProName</p>
                                                    <div class="price1">
                                                        <span class="actual">@product.Price $</span>
                                                    </div>
                                                </div>
                                                <div class="cart-right"></div>
                                                <div class="clear"></div>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        }
                        <div class="clear"></div>
                    </div>
                <h2 class="head">Sale product</h2>
                <div class="top-box">
                    @foreach (var product in ViewBag.latestProducts)
                    {
                        <div class="section group">
                            <div class="col_1_of_3 span_1_of_3">
                                <a href="@Url.Action("Details","Product", new { id = product.ProID })">

                                    <div class="inner_content clearfix">
                                        <div class="product_image">
                                            <img src="@Url.Content("~/Content/App/")images/@product.Image" alt="" width="300" height="180" />
                                        </div>
                                        <div class="sale-box"><span class="on_sale title_shop">Sale</span></div>
                                        <div class="price">
                                            <div class="cart-left">
                                                <p class="title">@product.ProName</p>
                                                <div class="price1">
                                                    <span class="actual">@product.Price $</span>
                                                </div>
                                            </div>
                                            <div class="cart-right"> </div>
                                            <div class="clear"></div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    }
                    <div class="clear"></div>
                </div>

            </div>
            <div class="rsidebar span_1_of_left">
                <div class="top-border"> </div>
                <div class="border">
                    <link href="~/Content/App/css/default.css" rel="stylesheet" type="text/css" media="all" />
                    <link href="~/Content/App/css/nivo-slider.css" rel="stylesheet" type="text/css" media="all" />
                    <script src="~/Content/App/js/jquery.nivo.slider.js"></script>
                    <script type="text/javascript">
                        $(window).load(function () {
                            $('#slider').nivoSlider();
                        });
                    </script>
                    <div class="slider-wrapper theme-default">
                        <div id="slider" class="nivoSlider">
                            <img src="/Content/App/images/t-img1.jpg" alt="" />
                            <img src="/Content/App/images/t-img2.jpg" alt="" />
                            <img src="/Content/App/images/t-img3.jpg" alt="" />
                        </div>
                    </div>
                    <div class="btn"><a href="/Account/Login">Check it Out</a></div>
                </div>
                <div class="top-border"> </div>
                <div class="sidebar-bottom">
                    <h2 class="m_1">Newsletters<br> Signup</h2>
                    <p class="m_text">Lorem ipsum dolor sit amet, consectetuer</p>
                    <div class="subscribe">
                        <form>
                            <input name="userName" type="text" class="textbox">
                            <input type="submit" value="Subscribe">
                        </form>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
</div>
<div>
    @Html.PagedListPager((IPagedList)ViewBag.latestProducts,page => Url.Action("HomePage", new{ page}))
</div>