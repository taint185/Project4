@model IEnumerable<WebSite.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayOut.cshtml";
}

<div class="content-wrapper">
    <div class="container-fluid">
        <!-- Example DataTables Card-->
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-table"></i> Categories
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <p>
                        @Html.ActionLink("Create New", "Create")
                    </p>
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>

                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CateName)
                                </th>
                                <th></th>
                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CateName)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.CateID }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.CateID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.CateID })
                                    </td>
                                </tr>
                            }
                        </tbody>


                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
