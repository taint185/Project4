@model WebSite.Models.Customer
@{
    ViewBag.Title = "ViewDetailsCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<!--Avatar-->
<div class="row">
    <div class="rol-md-12">
        <div class="col-md-3">
            <div class="profile-userpic">
                <img src="~/Content/App/images/customer-512.png" style="width:130px;height:130px;" />
            </div>
        </div>
        <div class="col-md-9">
            <h1> Profile customer</h1>
        </div>
    </div>
</div>

<!--/Avatar-->
<div class="row">

    <div class="row profile" style="font-family:Arial; font-size:1.1em">
        <div class="col-md-3">
            <div class="profile-sidebar">
                <!-- SIDEBAR USER TITLE -->
                <div class="profile-usertitle">
                    <div class="profile-usertitle-name" style="margin-top:10px;">
                        @*<h3>@Session["fullName"]</h3>*@
                    </div>
                </div>
                <div class="profile-usermenu" style="font-size:1.2em;">
                    <ul class="nav">
                        <li class="active">
                            <a href="/Customers/ViewDetailsCustomer?cus=@Model.CusName">
                                <i class="glyphicon glyphicon-home"></i>
                                Overview
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("EditCustomer", "Customers",new { cusName = Model.CusName })">
                                <i class="glyphicon glyphicon-user"></i> Edit Account
                            </a>
                        </li>
                        <li>

                           <a name="cusName"  href="@Url.Action("SendMail", "Customers",new { customer = Model.CusName })">
                                <i class="glyphicon glyphicon-envelope"></i>
                                Feed Back
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="glyphicon glyphicon-shopping-cart"></i>
                                History Orders
                            </a>
                        </li>
                    </ul>
                </div>
                <!-- END MENU -->
            </div>
        </div>
        <div class="col-md-9">
            <div class="profile-content">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <td>
                                Full Name
                            </td>
                            <th>
                                @Html.DisplayFor(model => model.FullName)
                            </th>
                        </tr>
                        <tr>
                            <td>
                                User Name
                            </td>
                            <th>
                                @Html.DisplayFor(model => model.CusName)
                            </th>
                        </tr>
                        <tr>
                            <td>
                                Gender
                            </td>
                            <th>
                                @Html.DisplayFor(model => model.Gender)
                            </th>
                        </tr>
                        <tr>
                            <td>
                                Birth Date
                            </td>
                            <th>
                                @Html.DisplayFor(model => model.BirthDay)
                            </th>
                        </tr>
                        <tr>
                            <td>
                                Email
                            </td>
                            <th>
                                @Html.DisplayFor(model => model.Email)
                            </th>
                        </tr>
                        <tr>
                            <td>
                                Phone
                            </td>
                            <th>
                                @Html.DisplayFor(model => model.Phone)
                            </th>
                        </tr>
                        <tr>
                            <td>
                                Address
                            </td>
                            <th>
                                @Html.DisplayFor(model => model.Address)
                            </th>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
