@model WebSite.Models.Customer
@{
    ViewBag.Title = "SendMail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SendMail</h2>

<form action="/Mailer/Send" method="post">
    <div>
       @ViewBag.Message
    </div>
    <div class="form-group">
        <label>From</label>
        <input name="from" value="@Model.Email" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label>To</label>
        <input name="to" placeholder="LeoShop@gmail.com"  class="form-control" disabled />
    </div>
    <div class="form-group">
        <label>Title</label>
        <input name="subject" class="form-control" />
    </div>
    <div class="form-group">
        <label>Content</label>
        <textarea name="body" class="form-control" rows="3"></textarea>
    </div>
    <button class="btn btn-danger">Send</button>
</form>